<?php namespace FooSpace\Decorators;

use FooSpace\WhateverInterface;
use Cerbero\Workflow\Validation\AbstractValidator;

/**
 * Decorator of the whatever workflow.
 *
 * @author		me
 */
class Validator extends AbstractValidator implements WhateverInterface
{

	/**
	 * @author		me
	 * @var 	 	WhateverInterface	$whatever	Whatever implementation.
	 */
	protected $whatever;
	
	/**
	 * Set the dependencies.
	 *
	 * @author		me
	 * @param		WhateverInterface	$whatever
	 * @return		void
	 */
	public function __construct(WhateverInterface $whatever)
	{
		$this->whatever = $whatever;
	}

	/**
	 * Trigger the whatever workflow.
	 *
	 * @author		me
	 * @param		$data
	 */
	public function trigger($data = null)
	{
		$this->validate($data);

		$this->whatever->trigger($data);
	}

	/**
	 * Retrieve the rules to apply.
	 *
	 * @author		me
	 * @return		array
	 */
	protected function getRules()
	{
		return [];
	}

}