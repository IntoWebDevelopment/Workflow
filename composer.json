{
    "name": "cerbero/workflow",
    "description": "Speed up the workflow to add new features to your Laravel projects.",
    "keywords": ["laravel", "artisan", "workflow", "decorators"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Marco Sartori",
            "email": "22cerbero22@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.2.*"
    },
    "require-dev": {
        "codeception/codeception": ">=2.0.2"
    },
    "autoload": {
        "psr-0": {
            "Cerbero\\Workflow\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan config:publish cerbero/workflow",
            "php artisan view:publish cerbero/workflow"
        ],
        "post-update-cmd": [
            "php artisan config:publish cerbero/workflow",
            "php artisan view:publish cerbero/workflow"
        ]
    },
    "minimum-stability": "stable"
}
